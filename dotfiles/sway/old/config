### Gammastep and WLSunset
## gammastep
bindsym $mod+XF86Favorites mode "$mode_gammastep"
set $mode_gammastep Set colour temperature: (a)uto, (r)eset, (2)500K, (3)000K, (4)000K, (5)000K
set $kill_gammastep pkill -1 gammastep;
mode "$mode_gammastep" {
    bindsym a exec --no-startup-id "$kill_gammastep gammastep -P -l 49.6585:-124.9835 -t 5000:4000", mode "default"
    bindsym r exec --no-startup-id "$kill_gammastep gammastep -x", mode "default"
    bindsym 2 exec --no-startup-id "$kill_gammastep gammastep -P -O 2500", mode "default"
    bindsym 3 exec --no-startup-id "$kill_gammastep gammastep -P -O 3000", mode "default"
    bindsym 4 exec --no-startup-id "$kill_gammastep gammastep -P -O 4000", mode "default"
    bindsym 5 exec --no-startup-id "$kill_gammastep gammastep -P -O 5000", mode "default"

    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

